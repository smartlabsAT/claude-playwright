{
  "name": "claude-playwright",
  "version": "0.1.0",
  "description": "Seamless integration between Claude Code and Playwright MCP for efficient browser automation and testing",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./mcp": {
      "types": "./dist/mcp/server.d.ts",
      "import": "./dist/mcp/server.js",
      "require": "./dist/mcp/server.cjs"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "import": "./dist/cli/index.js",
      "require": "./dist/cli/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "claude-playwright": "./bin/claude-playwright.js"
  },
  "scripts": {
    "build": "tsup",
    "build:tsc": "tsc",
    "dev": "tsup --watch",
    "dev:cli": "tsx src/cli/index.ts",
    "dev:mcp": "tsx src/mcp/server.ts",
    "test": "node tests/test-cli-commands.js && node tests/test-installation.js",
    "test:cli": "node tests/test-cli-commands.js",
    "test:install": "node tests/test-installation.js",
    "test:playwright": "playwright test",
    "prepublishOnly": "npm run build",
    "postinstall": "node scripts/postinstall.js",
    "publish:alpha": "npm publish --tag alpha",
    "publish:next": "npm publish --tag next",
    "version:alpha": "npm version prerelease --preid=alpha"
  },
  "keywords": [
    "playwright",
    "claude",
    "mcp",
    "testing",
    "automation",
    "browser-testing",
    "session-management",
    "page-object-model",
    "e2e-testing",
    "web-automation",
    "cli-tool",
    "browser-profiles"
  ],
  "author": {
    "name": "SmartLabs",
    "email": "support@smartlabs.at",
    "url": "https://smartlabs.at"
  },
  "license": "MIT",
  "homepage": "https://github.com/smartlabsAT/claude-playwright#readme",
  "bugs": {
    "url": "https://github.com/smartlabsAT/claude-playwright/issues",
    "email": "support@smartlabs.at"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.2.0",
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "fs-extra": "^11.1.1",
    "inquirer": "^8.2.5",
    "lru-cache": "^11.1.0",
    "playwright": "^1.40.0",
    "readline": "^1.3.0",
    "zod": "^3.22.0"
  },
  "peerDependencies": {
    "@playwright/test": "^1.40.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/fs-extra": "^11.0.1",
    "@types/inquirer": "^9.0.3",
    "@types/node": "^20.5.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.1.6"
  },
  "files": [
    "bin",
    "dist",
    "scripts",
    "docs/MCP_SERVER.md",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smartlabsAT/claude-playwright.git"
  }
}
